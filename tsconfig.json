{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2022",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "./types",

    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist"
  },
  "exclude": [
    "node_modules",
    "dist",
    "types"
  ],
  "include": [ "src/**/*" ]
}
